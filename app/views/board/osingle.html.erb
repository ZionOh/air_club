        <!--/start-main-->
          <div class="main-content">
		      <!--/soccer-inner-->
	                 <div class="soccer-inner">
					  <!--/soccer-left-part-->
					  <div class="col-md-8 soccer-left-part  blog">
					    <!--/about-->
						<div class="blogs">
						    <h3 class="tittle">Details</h3>
					        <div class="blog-grid">
						    <% if @osingle.image? %>
							    <img src="<%=@osingle.image.url%>" class="img-responsive" alt="" />
						    <% else %>
						    <% end %>
						    <% if @osingle.url? %>
					        <iframe src="<%=@osingle.url.gsub('watch?v=', 'embed/') %>" width="500px"></iframe>
						    <% else %>
						    <% end %>
							</div>
							 <div class="single-bottom">
							 <p><%=@osingle.content%></p>
					    </div>
						<div class="response">
					<h4>Comments</h4>
               <% @osingle.comments.each do |co| %>
					<div class="media response-info">
						<div class="media-left response-text-left">
							<a href="#">
								<img class="media-object" src="<%=co.user.image.url%>" alt=""/>
							</a>
							<h5><a href="#"><%=co.user.username%></a></h5>
						</div>
						<div class="media-body response-text-right">
							<p><%=co.msg%></p><p><%=co.created_at%></p>
						</div>
					</div>
				<% end %>
				</div>	
				<div class="coment-form">
					<h4>Leave your comment</h4>

        <%=form_tag '/comment', method: 'post' do %>
        <input type="hidden" name="oblog_id" value=" <%=@osingle.id%>">
        <input type="text" name="comment">
        <input type="submit">
        <% end %>
				</div>	
				<div class="clearfix"></div>

				</div>
					
			</div>
					<!--//soccer-left-part-->
		           <div class="clearfix"> </div>
	           </div>
			</div>
		<!--//soccer-inner-->
	 </div>
